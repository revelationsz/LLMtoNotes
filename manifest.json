{
  "manifest_version": 3,
  "name": "LLM to Notes",
  "version": "1.0.0",
  "description": "Quickly capture and save notes from any webpage",
  "permissions": ["storage", "activeTab", "nativeMessaging"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
